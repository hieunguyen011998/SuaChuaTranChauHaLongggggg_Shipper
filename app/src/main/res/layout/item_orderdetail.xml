<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_margin="10dp"
    android:weightSum="10"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<ImageView
    android:id="@+id/itemOrderDetail_imgOrder"
    android:src="@drawable/ic_ship"
    android:layout_width="0dp"
    android:layout_weight="2"
    android:layout_height="80dp">
</ImageView>
    <LinearLayout
        android:layout_marginTop="5dp"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight="6"
        android:layout_marginLeft="10dp"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/itemOrderDetail_txtNameDrink"
        android:text="Tên drink"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </TextView>
        <TextView
            android:id="@+id/itemOrderDetail_txtMountDrink"
            android:text="Số lượng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>
    </LinearLayout>
    <TextView
        android:id="@+id/itemOrderDetail_txtPriceDrink"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:text="Price"
        android:textSize="15sp"
        android:layout_marginTop="15dp"
        android:layout_height="wrap_content">
    </TextView>
</LinearLayout>