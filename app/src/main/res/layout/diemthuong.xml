<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    android:background="#BBBB00"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView
        android:layout_weight="3"
        android:layout_width="match_parent"
        android:layout_height="0dp">
    </ImageView>
    <LinearLayout
        android:layout_weight="7"
        android:background="@drawable/custome_khung_diemthuong"
        android:layout_marginTop="-80dp"
        android:orientation="vertical"
        android:layout_marginHorizontal="30dp"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <TextView
            android:text="Điểm số hiện tại"
            android:textColor="#021A91"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>
        <TextView
            android:text="0"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>
        <ProgressBar
            android:layout_width="match_parent"
            android:background="#FF9800"
            android:layout_marginTop="10dp"
            android:layout_height="10dp">
        </ProgressBar>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="0"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>
            <TextView
                android:text="100"
                android:textSize="20sp"
                android:layout_marginLeft="300dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>
        </LinearLayout>
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content">
       </TextView>
        <TextView
            android:layout_marginTop="80dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="Lịch sử đổi điểm thưởng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>
        <TextView
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="Đổi điểm thưởng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>
        <TextView
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="Danh sách Voucher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>
        <TextView
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="Hướng dẫn đổi điểm thưởng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>
    </LinearLayout>
</LinearLayout>