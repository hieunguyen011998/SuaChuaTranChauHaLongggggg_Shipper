<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_marginHorizontal="5dp"
    android:weightSum="10"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView
        android:id="@+id/item_ordershipping_imageOder"
        android:src="@drawable/ic_ship"
        android:layout_width="0dp"
        android:layout_weight="1.5"
        android:layout_height="60dp">
    </ImageView>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="0dp"
    android:layout_weight="7.9"
    android:layout_marginLeft="5dp"
    android:layout_height="60dp">
   <TextView
       android:text="MÃ£ order"
       android:id="@+id/item_ordershipping_txtIDOrder"
       android:layout_marginTop="5dp"
       android:textSize="18sp"
       android:textStyle="bold"
       android:layout_width="100dp"
       android:layout_height="wrap_content">
   </TextView>
    <TextView
        android:id="@+id/item_ordershipping_txtPriceOrder"
        android:text="Price"
        android:textSize="14sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </TextView>

</LinearLayout>
    <RelativeLayout
        android:layout_weight="0.01"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <FrameLayout
        android:id="@+id/item_ordershipping_frameStatusConfirmed"
        android:layout_width="6dp"
        android:background="#2196F3"
        android:visibility="gone"
        android:layout_gravity="center_vertical"
        android:layout_height="50dp">
    </FrameLayout>
    <FrameLayout
        android:id="@+id/item_ordershipping_frameStatusSetUpDrink"
        android:layout_width="6dp"
        android:visibility="gone"
        android:background="#F1960F"
        android:layout_gravity="center_vertical"
        android:layout_height="50dp">
    </FrameLayout>
    </RelativeLayout>
</LinearLayout>