<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:id="@+id/ActivityOrderDetailShipper_txtMaOrder"
        android:text="Mã đơn hàng : "
        android:textStyle="bold"
        android:textSize="15sp"
        android:textColor="#021A91"
        android:layout_margin="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </TextView>
    <TextView
        android:text="Trạng thái: Đã xác nhận"
        android:textSize="14sp"
        android:layout_marginLeft="5dp"
        android:textColor="#021A91"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </TextView>
        <TextView
            android:id="@+id/ActivityOrderDetailShipper_txtStatusThanhToan"
            android:text="Chưa thanh toán"
            android:textSize="15sp"
            android:gravity="right"
            android:textColor="#F1960F"
            android:layout_marginRight="10dp"
            android:layout_gravity="right"
            android:textStyle="bold"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>
    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/ActivityOrderDetailShipper_txtTittleCustomer"
            android:text="Thông tin khách hàng"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_margin="5dp"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>
        <TextView
            android:id="@+id/ActivityOrderDetailShipper_txtNameCustomer"
            android:text="Họ tên : Nguyễn Văn Hiếu"
            android:textSize="13sp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>
        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/ActivityOrderDetailShipper_txtPhoneCustomer"
                android:text="Số điện thoại : 0967508481"
                android:textSize="13sp"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>
            <ImageView
                android:src="@drawable/ic_call_black_24dp"
                android:id="@+id/ActivityOrderDetailShipper_imgCallPhone"
                android:layout_width="20dp"
                android:layout_marginLeft="20dp"
                android:layout_height="20dp">
            </ImageView>
            <ImageView
                android:src="@drawable/ic_message_black_24dp"
                android:id="@+id/ActivityOrderDetailShipper_imgMessage"
                android:layout_width="20dp"
                android:layout_marginLeft="10dp"
                android:layout_height="20dp">
            </ImageView>
        </LinearLayout>
        <TextView
            android:id="@+id/ActivityOrderDetailShipper_txtAddressCustomer"
            android:text="Địa chỉ : KĐT Pháp Vân - Tứ Hiệp"
            android:textSize="13sp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="200dp">
        <TextView
            android:text="Thông tin sản phẩm"
            android:id="@+id/ActivityOrderDetailShipper_txtTittleInfoDrink"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_margin="5dp"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/ActivityOrderDetailShipper_recyclerDrink"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:scrollbars="vertical"></androidx.recyclerview.widget.RecyclerView>
        </ScrollView>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="15sp"
            android:id="@+id/ActivityOrderDetailShipper_txtTittleBillTotal"
            android:textStyle="bold"
            android:layout_margin="5dp"
            android:textColor="#000000"
            android:text="Tổng thanh toán"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>
        <TextView
            android:text="Số lượng :"
            android:id="@+id/ActivityOrderDetailShipper_txtMountDrinkDetail"
            android:layout_marginTop="5dp"
            android:textColor="#000000"
            android:textSize="13sp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>
        <TextView
            android:text="Thanh toán :"
            android:id="@+id/ActivityOrderDetailShipper_txtThanhToan"
            android:layout_marginTop="5dp"
            android:textColor="#000000"
            android:textSize="13sp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>
        <TextView
            android:text="Khuyến mãi :"
            android:id="@+id/ActivityOrderDetailShipper_txtKhuyenMai"
            android:layout_marginTop="5dp"
            android:textSize="13sp"
            android:layout_marginLeft="10dp"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>
        <TextView
            android:text="Phí vận chuyển :"
            android:id="@+id/ActivityOrderDetailShipper_txtPhiVanChuyen"
            android:layout_marginTop="5dp"
            android:textSize="13sp"
            android:layout_marginLeft="10dp"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>
        <TextView
            android:text="Tổng thanh toán :"
            android:id="@+id/ActivityOrderDetailShipper_txtTongThanhToan"
            android:layout_marginLeft="10dp"
            android:textColor="#000000"
            android:textSize="13sp"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:gravity="right">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ActivityOrderDetailShipper_btnNhanDonHang"
            android:background="#021A91"
            android:padding="10dp"
            android:textSize="15sp"
            android:layout_marginRight="10dp"
            android:text="Nhận đơn hàng"
            android:textColor="#FFFFFF"></Button>
    </LinearLayout>
</LinearLayout>
</ScrollView>