<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:id="@+id/ActivityOrderDetail_txtMaOrder"
        android:text="Mã đơn hàng : "
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_margin="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </TextView>
    <TextView
        android:id="@+id/ActivityOrderDetail_txtNameOrder"
        android:text="Tên sản phẩm : "
        android:textSize="20sp"
        android:layout_margin="5dp"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </TextView>
    <TextView
        android:id="@+id/ActivityOrderDetail_txtMountOrder"
        android:text="Số lượng : "
        android:textSize="20sp"
        android:layout_margin="5dp"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </TextView>
    <TextView
        android:id="@+id/ActivityInformationShipper_txtPriceDrink"
        android:text="Đơn giá : "
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_margin="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </TextView>
    <TextView
        android:id="@+id/ActivityInformationShipper_txtPhone"
        android:text="Số điện thoại : "
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_margin="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </TextView>
</LinearLayout>